type Installation {
  id: ID! @id
  access_token: String!
  scope: String!
  user_id: String!
  team_name: String!
  team_id: String!
}

type User {
  id: ID! @id
  user_id: String!
  team_id: String!
  default_did: String!
  dids: [Did!]!
}

type Did {
  id: ID! @id
  did: String! @unique
  privateKey: String
  users: [User!]
  issuedClaims: [Claim!] @relation(name: "Claims_From_User")
  receivedClaims: [Claim!] @relation(name: "Claims_To_User")
}

type ClaimField {
  id: ID! @id
  claimType: String!
  claimValue: String!
  subject: Did!
}

type Claim {
  id: ID! @id
  team_id: String!
  channel_id: String!
  issuer: String!
  subject: String!
  createdAt: DateTime! @createdAt
  issuedAt: DateTime!
  jwt: String!
  claimFields: [ClaimField!]!
}